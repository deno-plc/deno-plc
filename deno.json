{
    "workspace": [
        "./utils",
        "./signals",
        "./signal-utils",
        "./router"
    ],
    "tasks": {
        "check": "deno fmt & deno lint & deno run --allow-read --allow-write --allow-run=git scripts/license-bot.ts & deno run -A npm:cspell@^8.14.2 lint . --no-progress & deno publish --dry-run --allow-dirty",
        "check-ci": "deno fmt --check & deno lint & deno run --allow-read --allow-run=git scripts/license-bot.ts & deno run -A npm:cspell@^8.14.2 lint . --no-progress & deno publish --dry-run",
        "check:license": "deno run --allow-read --allow-write scripts/license-bot.ts",
        "check:spell": "deno run -A npm:cspell@^8.14.2 lint . --no-progress"
    },
    "imports": {
        "@coderspirit/nominal": "npm:@coderspirit/nominal@^4.1.1",
        "@std/cli": "jsr:@std/cli@^1.0.9",
        "@std/fs": "jsr:@std/fs@^1.0.7",
        "hono": "jsr:@hono/hono@^4.6.14",
        "@logtape/logtape": "jsr:@logtape/logtape@^0.8.0",
        "@std/assert": "jsr:@std/assert@^1.0.9",
        "@std/encoding": "jsr:@std/encoding@^1.0.5",
        "preact": "npm:preact@^10.22.1",
        "preact-render-to-string": "npm:preact-render-to-string@^6.5.6",
        "preact/hooks": "npm:preact@^10.22.1/hooks"
    },
    "nodeModulesDir": "auto",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "lib": [
            "deno.window",
            "deno.ns",
            "ES2023",
            "DOM",
            "DOM.Iterable",
            "DOM.AsyncIterable",
            "webworker"
        ]
    },
    "lint": {
        "exclude": [
            "target",
            "dist"
        ]
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 150,
        "exclude": [
            "target",
            "dist"
        ]
    },
    "license": "GPL-3.0"
}
